<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingClass"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp">

        <ImageView
            android:src="@drawable/avis"
            android:id="@+id/item_actualite_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="8dp" />


    <TextView
        android:id="@+id/item_actualite_intitule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_actualite_image"
        android:layout_toRightOf="@id/item_actualite_image"
        android:gravity="center_vertical"
        android:text=""
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_actualite_description"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/item_actualite_intitule"
        android:layout_toRightOf="@id/item_actualite_image"
        android:gravity="center_vertical"
        android:text=""
        android:textSize="14dp"
        />


    <TextView
        android:id="@+id/item_actualite_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_actualite_description"
        android:layout_toEndOf="@id/item_actualite_image"
        android:layout_toRightOf="@id/item_actualite_image"
        android:text=""
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />
    </RelativeLayout>


</androidx.cardview.widget.CardView>